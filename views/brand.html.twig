<body>
    <div class="jumbotron">
        <h1>{{ brand.getBrandName }}</h1>
        <h2><em>Add a store or delete a store.</em></h2>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>{{ brand.getBrandName }}</h1>

                {% if stores is not empty %}
                    <p>Here are the stores:</p>
                    <ul>
                        {% for store in stores %}
                            <li><a href="/store/{{ store.getId }}">{{ store.getStoreName }}</a></li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>You currently don't have any stores! Use the form below to get started!</p>
                {% endif %}
                <!-- ADD STUDENT TO COURSE DROPDOWN -->
                        <h3>Add a store</h3>
                        <form action="/brand_add_store" method="post">
                            <input id="store_id" = name="store_id" type="hidden" value="{{ store.getId }}">

                            <label for="store_id">Select a store:</label>
                            <select name="store_id" type="text" required>
                                    {% for store in all_stores %}
                                        <option value="{{ store.getId }}">{{ store.getStoreName }}</option>
                                    {% endfor %}
                            </select>

                            <button type="submit">Add Store</button>
                        </form>
