
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css" type="text/css">
    <title>Stores</title>
</head>
<body>
    <div class="jumbotron">
        <h1>Shoe Stores</h1>
        <h2><em>Add a store or click on a store to update or add a brand.</em></h2>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 form">
                <!-- DISPLAY AREA -->
                        {% if stores is not empty %}
                            <h3>List of current stores:</h3>
                            <ul>
                                {% for store in stores %}
                                    <li><a href="/store/{{ store.getId }}">{{ store.getStoreName }}</a></li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <h3>You currently don't have any stores listed! Use the form below to add a store.</h3>
                        {% endif %}
                <!-- END DISPLAY AREA -->
            </div>
            <div class="col-sm-6 form">
                <!-- START ADD STORE FORM -->
                        <form action="/add_store" method="post">
                            <label for="name">Store Name:</label>
                            <input type="text" name="store_name" required>


                            <button type="submit">Add Store</button>
                        </form>
                <!-- END ADD STORE FORM -->
                        <form action="/delete_all_stores" method="post">
                            <button type="submit">Delete ALL Stores</button>
                        </form>
                    <h2><a href="/">Home</a></h2>
                    <h2><a href="/brands">Brands</a></h2>
            </div>
        </div>
    </div>
    <div class="navbar navbar-fixed-bottom" role="navigation">
        <div class="container">
            <div class="navbar-text pull-left">
                <p>Â© 2016 Josh Overly.</p>
            </div>
        </div>
    </div>
</body>
</html>
